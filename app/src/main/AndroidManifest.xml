<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="estimator.recovery.com.customsplicerecoveryestimator">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Calculation"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_calculation"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".CommonWebview"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_webview"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".PDFView"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_pdfview"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".Disclaimer"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_disclaimer"
            android:screenOrientation="portrait"
            android:theme="@style/FullscreenTheme"></activity>
    </application>

</manifest>
