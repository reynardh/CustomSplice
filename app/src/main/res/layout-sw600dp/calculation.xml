<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="Your One Stop Shop For All of Your \n Off-Road Recovery Needs"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/white" />

        <Spinner
            android:id="@+id/spnVehicleType"
            style="@style/spinner_style_for_whiteBackground"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" />

        <EditText
            android:id="@+id/edtVahicleWeight"
            style="@style/edittesxt_style_for_whiteBackground"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="--Select Vehicle Type will show Weight--"
            android:editable="false" />

        <Spinner
            android:id="@+id/spnSurfaceType"
            style="@style/spinner_style_for_whiteBackground"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spnDepth"
            style="@style/spinner_style_for_whiteBackground"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <Spinner
                android:id="@+id/spnIncline"
                style="@style/spinner_style_for_whiteBackground"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0" />

            <Button
                android:id="@+id/btnCalculate"
                style="@style/button_style_for_orangeBackground"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:text="Calculate"
                android:textAllCaps="false" />

        </LinearLayout>

        <Button
            android:id="@+id/btnResult"
            style="@style/button_style_for_blueBackground"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Result"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnRegister"
            style="@style/button_style_for_SquareBackround"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Register for 10% off your first Order"
            android:textAllCaps="false" />


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/RLbtnJoinFacebook"
            android:gravity="center"
            style="@style/button_style_for_FacebookBackground"
            android:padding="5dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnJoinFacebook"
                android:src="@drawable/facebook_icon"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join Us On Facebook"
                android:id="@+id/txtbtnJoinFacebook"
                android:textColor="#FFFFFF"
                android:layout_toRightOf="@+id/btnJoinFacebook"
                android:layout_toEndOf="@+id/btnJoinFacebook"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="24dp" />
        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/RLbtnCheckOut"
            android:gravity="center"
            style="@style/button_style_for_blueBackground"
            android:padding="5dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnCheckOut"
                android:src="@drawable/cart_icon"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check Out Our Conversion Chart"
                android:id="@+id/txtCheckOut"
                android:textColor="#FFFFFF"
                android:layout_toRightOf="@+id/btnCheckOut"
                android:layout_toEndOf="@+id/btnCheckOut"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="24dp" />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>